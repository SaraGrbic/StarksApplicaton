@model IEnumerable<Starks_application.Enrollment>

@{
    ViewBag.Title = "Index";
}

<h2>Marks of students</h2>
<div id="EditMark"></div>
<div id="DetailsMark"></div>
<div id="DeleteMark"></div>
<div id="CreateMark"></div>
<p>
    @Ajax.ActionLink("Create New", "Create", new AjaxOptions() {HttpMethod="Get", UpdateTargetId="CreateMark", InsertionMode=InsertionMode.Replace })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Mark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.FirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentId }, new AjaxOptions() { HttpMethod = "Get", UpdateTargetId = "EditMark", InsertionMode = InsertionMode.Replace }) |
            @Html.ActionLink("Details", "Details", new { id = item.EnrollmentId }, new AjaxOptions() { HttpMethod = "Get", UpdateTargetId = "DetailsMark", InsertionMode = InsertionMode.Replace }) |
            @Ajax.ActionLink("Delete", "Delete", new { id = item.EnrollmentId }, new AjaxOptions() { HttpMethod = "Get", UpdateTargetId = "DeleteMark", InsertionMode = InsertionMode.Replace })
        </td>
    </tr>
}

</table>
@section scripts{

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}